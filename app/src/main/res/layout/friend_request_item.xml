<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:weightSum="100">
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/friend_request_photo"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:layout_weight="20"/>
        <TextView
            android:id="@+id/friend_request_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="60"/>
        <Button
            android:id="@+id/friend_request_decline"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_weight="15"
            android:background="@drawable/ic_do_not_disturb_on_black_24dp"
            />
        <Button
            android:id="@+id/friend_request_accept"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_weight="15"
            android:layout_marginEnd="20dp"
            android:background="@drawable/ic_check_circle_black_24dp"
            />
    </LinearLayout>



</RelativeLayout>